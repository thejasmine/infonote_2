<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-8 offset-sm-2 my-2">
      <%= simple_form_for [@contact, @task] do |f| %>
        <div class="form-inputs">
          <%= f.input :note %>
          <%= f.input :time %>
        </div>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

